{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bes/*": ["./packages/bes/src/*"],
      "@aim/*": ["./packages/aim/src/*"],

      "@sharedtypes/*": ["../../sharedtypes/src/*"]
    }
  },
  "include": ["src", "packages"],
  "exclude": ["node_modules", "dist"]
}
